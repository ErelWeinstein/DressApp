<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <EditText
        android:id="@+id/typeInput"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="סוג פריט (למשל, חולצה)"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/colorInput"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="צבע הפריט (למשל, שחור)"
        app:layout_constraintTop_toBottomOf="@id/typeInput"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <EditText
        android:id="@+id/seasonInput"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="עונה (חורף, קיץ)"
        app:layout_constraintTop_toBottomOf="@id/colorInput"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <EditText
        android:id="@+id/notesInput"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="הערות (לא חובה)"
        app:layout_constraintTop_toBottomOf="@id/seasonInput"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <Button
        android:id="@+id/saveButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="שמירה"
        app:layout_constraintTop_toBottomOf="@id/notesInput"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp" />
</androidx.constraintlayout.widget.ConstraintLayout>
